pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/jessyewoma/Flaskweb.git']]])
            }
        }
        stage('Deploy') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'ansible.yml',
                        extraVars: [
                            F1: 'F1'
                        ],
                        inventory: 'host.ini'
                    )
                }
            }
        }
    }
}
